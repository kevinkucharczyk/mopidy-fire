<div class="album__cover">
  <img src={{images.2.uri}}>
  {{album.name}} ({{album.date}})
  {{#mf-context-menu tagName="i" class="fa fa-ellipsis-h album__context-menu"
    play=(action 'play') add=(action 'add')
    as |component|}}
    <ul class="context-menu__list">
      <li class="context-menu__list-item" {{action 'handle' 'play' target=component}}>Play album</li>
      <hr class="context-menu__separator">
      <li class="context-menu__list-item" {{action 'handle' 'add' target=component}}>Add to queue</li>
    </ul>
  {{/mf-context-menu}}
</div>

{{#each tracks as |track|}}
  {{mf-track track=track}}
{{/each}}
