<div class="footer__track">
  {{#if hasTrack}}
    <span class="footer__track-title">{{currentTrack.name}}</span> -
    <span class="footer__track-artist">{{currentTrack.artists.firstObject.name}}</span>
  {{/if}}
</div>

<div class="row footer__controls">
  <div class="footer__center small-12 medium-2 large-2">
    <button class="control" {{action "previous"}}>
      <i class="control__icon fa fa-step-backward"></i>
    </button>
    <button class="control" {{action "togglePlayPause"}}>
      <i class="control__icon fa {{if isPlaying 'fa-pause' 'fa-play'}} control__icon--playpause"></i>
    </button>
    <button class="control" {{action "next"}}>
      <i class="control__icon fa fa-step-forward"></i>
    </button>
  </div>
  <div class="footer__center small-12 medium-10 large-7">
    <div class="footer__time">
      {{format-duration currentProgress}}
    </div>

    {{mf-slider currentPosition=currentProgressPercent onMouseUp=(action 'setProgress')}}

    <div class="footer__time">
      {{format-duration (if hasTrack currentTrack.length 0)}}
    </div>
  </div>
  <div class="footer__center small-12 large-3">
    <button class="control {{unless isRandom "inactive"}}" {{action "random"}}>
      <i class="control__icon fa fa-random"></i>
    </button>
    <button class="control {{unless isRepeat "inactive"}}" {{action "repeat"}}>
      <i class="control__icon fa fa-repeat"></i>
    </button>
    {{mf-volume-control}}
  </div>
</div>